page, .page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f7f8fa;
}

/* 顶部区域：2/3 */
.top-area {
  flex: 2;
  padding: 16rpx;
}

/* 表格滚动容器 */
.table-scroll {
  width: 100%;
  height: 100%;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.04);
}

/* 简易表格渲染 */
.table {
  min-width: 900rpx; /* 让横向可滚动在列较多时更友好 */
}

.tr {
  display: grid;
  grid-auto-flow: column;
  grid-auto-columns: minmax(120rpx, auto);
  align-items: center;
  border-bottom: 1rpx solid #f1f2f5;
}

.thead {
  position: sticky;
  top: 0;
  z-index: 5;
  background: #fafafa;
  border-bottom: 1rpx solid #ebedf0;
}

.th, .td {
  padding: 20rpx 24rpx;
  font-size: 26rpx;
  line-height: 1.4;
  white-space: nowrap;
}

.th {
  font-weight: 600;
  color: #323233;
}

.td {
  color: #646566;
}

.empty-wrap {
  padding: 80rpx 0;
}

/* 底部区域：1/3，左右分栏 */
.bottom-area {
  flex: 1;
  display: flex;
  gap: 16rpx;
  padding: 8rpx 16rpx 16rpx;
}

.left-pane, .right-pane {
  flex: 1;
  display: flex;
}

.card {
  flex: 1;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.04);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #323233;
}

.card-actions {
  margin-top: 16rpx;
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}

/* 设备弹窗 */
.popup-wrap {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
}

.popup-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 12rpx;
  margin-bottom: 8rpx;
  border-bottom: 1rpx solid #f1f2f5;
}

.empty-dev {
  padding: 60rpx 0;
}

/* 适配 iOS 安全区（如有需要可按项目基座调整） */
@supports (padding-top: constant(safe-area-inset-top)) {
  .page {
    padding-bottom: constant(safe-area-inset-bottom);
  }
}
@supports (padding-top: env(safe-area-inset-top)) {
  .page {
    padding-bottom: env(safe-area-inset-bottom);
  }
}

/* 外层容器：与页面统一 16rpx 左右边距，底部留白更舒适 */
.commit-wrap {
  padding: 0 16rpx 24rpx;
  margin-top: 12rpx;
  /* 如页面底部有 TabBar，可适当加大底部留白 */
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom, 0px));
}
@supports (padding-bottom: constant(safe-area-inset-bottom)) {
  .commit-wrap {
    padding-bottom: calc(24rpx + constant(safe-area-inset-bottom));
  }
}

/* 按钮本体：更圆润的胶囊形、合适高度与阴影 */
.commit-btn {
  height: 88rpx;               /* 视觉更稳 */
  line-height: 88rpx;
  border-radius: 9999rpx;      /* 完全胶囊 */
  font-size: 28rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  box-shadow: 0 10rpx 24rpx rgba(0,0,0,0.06);
}

/* 点击/禁用的细节（可选） */
.commit-btn:active {
  transform: scale(0.98);
}
.commit-btn[disabled] {
  box-shadow: none;
  opacity: 0.8;
}